<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="按钮整的挺好看" />

            <Button
                android:id="@+id/btn_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="加载整的挺好看" />

            <Button
                android:id="@+id/btn_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相机整的挺好看" />

            <Button
                android:id="@+id/btn_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glide整一下" />

            <Button
                android:id="@+id/btn_five"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PopWindow" />

            <Button
                android:id="@+id/btn_six"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SuperTextView文字挺好看" />

            <Button
                android:id="@+id/btn_seven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="时间、小数点转化" />

            <Button
                android:id="@+id/btn_eight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认弹窗Dialog" />

            <Button
                android:id="@+id/btn_nine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="本地存储记录" />

            <Button
                android:id="@+id/btn_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="绝对布局" />

            <Button
                android:id="@+id/btn_eleven"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GreenDao" />

            <Button
                android:id="@+id/btn_twelve"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RatingBar" />

            <Button
                android:id="@+id/btn_thirteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retrofit请求" />

            <Button
                android:id="@+id/btn_fourteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SpanningString" />

            <Button
                android:id="@+id/btn_fifteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="柱状图" />

            <Button
                android:id="@+id/btn_sixteen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分享弹窗" />

            <Button
                android:id="@+id/btn_seventeen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="枚举代替if/else" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>